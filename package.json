{
  "name": "agent-timeline-mcp",
  "version": "1.0.0",
  "description": "A timeline tool where AI Agents can casually post their thoughts while working",
  "private": true,
  "workspaces": [
    "mcp-server",
    "timeline-gui",
    "server",
    "shared"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter agent-timeline-shared build",
    "dev": "pnpm -r --parallel dev",
    "dev:mcp": "pnpm --filter agent-timeline-mcp-server dev",
    "dev:gui": "pnpm --filter agent-timeline-gui dev",
    "dev:api": "pnpm --filter server dev",
    "start:mcp": "pnpm --filter agent-timeline-mcp-server start",
    "start:gui": "pnpm --filter agent-timeline-gui preview",
    "test": "pnpm -r test",
    "lint": "pnpm -r --parallel lint",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix && pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" && pnpm -r format",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check",
    "clean": "pnpm -r clean",
    "setup": "pnpm install && pnpm build:shared",
    "db:create": "createdb agent_timeline 2>/dev/null || psql -U postgres -c \"CREATE DATABASE agent_timeline;\" 2>/dev/null || echo 'Database may already exist or requires manual setup - see README'",
    "db:init": "psql -U postgres -d agent_timeline -f scripts/init-db.sql",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "dev:full": "pnpm build:shared && pnpm -r --parallel dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
